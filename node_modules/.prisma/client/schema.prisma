generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Adm {
  id    String @id @default(cuid())
  name  String @unique
  email String @unique
}

model User {
  id          String   @id @default(cuid())
  name        String
  cpf         String   @unique
  email       String   @unique
  password    String
  tel         String   @unique
  emerg       String
  genero      String?
  active      Boolean?
  mensalidade String
  planoId     String?
  plano       Plano?   @relation(fields: [planoId], references: [id])
  entradaId   String?
  entrada     Entrada? @relation(fields: [entradaId], references: [id])
  treinoId    String?
  treino      Treino?  @relation(fields: [treinoId], references: [id])
}

model Plano {
  id       String @id @default(cuid())
  name     String
  value    String
  duration String
  user     User[]
  qtd      Int?
}

model Caixa {
  id         String @id @default(cuid())
  name       Int    @unique
  aplicativo Int?
  pix        Int?
  dinheiro   Int?
}

model Entrada {
  id     String @id @default(cuid())
  name   String
  method String
  date   String
  month  Int?
  user   User[]
}

model Exercicio {
  id   String @id @default(cuid())
  name String @unique
  desc String

  treino Treino[]
}

model Treino {
  id          String     @id @default(cuid())
  name        String     @unique
  user        User[]
  exercicioId String?
  exercicio   Exercicio? @relation(fields: [exercicioId], references: [id])
}
